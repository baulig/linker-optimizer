<?xml version="1.0" encoding="utf-8"?>  
<Project ToolsVersion="Current" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <Import Project="$(MSBuildThisFileDirectory)\Mono.WasmPackager.Web.targets" />

  <Import Sdk="Microsoft.NET.Sdk.Web" Project="Sdk.targets" />

  <Import Sdk="Mono.WasmPackager" Version="1.0.0" Project="Sdk.targets" />

  <PropertyGroup>
    <RunCommand>dotnet</RunCommand>
    <RunWorkingDirectory>$(MSBuildProjectDirectory)</RunWorkingDirectory>
    <RunArguments>$(WasmPackager_NugetPackageRoot)/microsoft.aspnetcore.blazor.devserver/$(BlazorVersion)/tools/blazor-devserver.dll serve  --applicationpath &quot;$(MSBuildProjectDirectory)/$(OutputPath)$(TargetFileName)&quot;</RunArguments>
  </PropertyGroup>

</Project>
