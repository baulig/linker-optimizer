<?xml version="1.0" encoding="utf-8" ?>
<linker>
	<martin>
		<options all-modules="true" analyze-all="true" preprocess="true" report-size="true" />

		<type fullname="System.Globalization.GlobalizationSupport" action="preserve" />

		<conditional feature="security" enabled="false">
			<type fullname="System.AppDomain">
				<method name="get_DefaultPrincipal" action="throw" />
			</type>
		</conditional>

		<conditional feature="crypto" enabled="true">
			<type fullname="System.Security.Cryptography.CryptoConfig" action="preserve" />
		</conditional>

		<conditional feature="crypto" enabled="false">
			<type fullname="System.Security.Cryptography.CryptoConfig" action="warn" />
			<type fullname="System.Security.Cryptography.CryptoConfigForwarder" action="warn" />
		</conditional>

		<features>
			<feature name="remoting" enabled="false" />
			<feature name="globalization" enabled="false" />
			<feature name="serialization" enabled="false" />
			<feature name="security" enabled="false" />
			<feature name="crypto" enabled="true" />
		</features>
	</martin>
</linker>
