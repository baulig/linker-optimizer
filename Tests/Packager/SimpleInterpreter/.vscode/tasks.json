{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "debug-build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/../../DebugBuild",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:Summary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "package-optimizer",
            "command": "dotnet",
            "type": "process",
            "args": [
                "pack",
                "${workspaceFolder}/../../../Mono.Linker.Optimizer",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:Summary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "package-cilstrip",
            "command": "dotnet",
            "type": "process",
            "args": [
                "pack",
                "${workspaceFolder}/../../../Mono.Linker.CilStrip",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:Summary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "package-wasmpackager",
            "command": "dotnet",
            "type": "process",
            "args": [
                "pack",
                "${workspaceFolder}/../../../Mono.WasmPackager",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:Summary"
            ],
            "problemMatcher": "$msCompile",
            "dependsOrder": "sequence",
            "dependsOn": [
                "package-optimizer",
                "package-cilstrip"
            ]
        },
        {
            "label": "clean-optimizer",
            "command": "dotnet",
            "type": "process",
            "args": [
                "clean",
                "${workspaceFolder}/../../../Mono.Linker.Optimizer",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:Summary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "clean-cilstrip",
            "command": "dotnet",
            "type": "process",
            "args": [
                "clean",
                "${workspaceFolder}/../../../Mono.Linker.CilStrip",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:Summary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "clean-packager",
            "command": "dotnet",
            "type": "process",
            "args": [
                "clean",
                "${workspaceFolder}/../../../Mono.WasmPackager",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:Summary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/SimpleInterpreter.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:Summary",
                "/verbosity:normal"
            ],
            "problemMatcher": "$msCompile",
            "dependsOrder": "sequence",
            "dependsOn": [
                "package-optimizer",
                "package-cilstrip",
                "package-wasmpackager"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "clean",
            "command": "dotnet",
            "type": "process",
            "args": [
                "clean",
                "${workspaceFolder}/SimpleInterpreter.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:Summary"
            ],
            "problemMatcher": "$msCompile",
            "dependsOrder": "sequence",
            "dependsOn": [
                "clean-optimizer",
                "clean-cilstrip",
                "clean-wasmpackager"
            ]
        }
    ]
}